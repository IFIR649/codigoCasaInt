#include <IRremote.hpp>
#define IR_RECEIVE_PIN 11
float clave=false;
float acceso=false;

int estadoGlobal=1;
String value;
String contra;

//verifica en que modo estÃ¡
void estado(){
  if(IrReceiver.decodedIRData.decodedRawData,HEX == "B946FF00"){
    estadoGlobal++;
    if(estadoGlobal>=4){
      estadoGlobal==0;
    }
  }
}

